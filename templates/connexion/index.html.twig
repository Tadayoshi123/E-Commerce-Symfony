{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    {# app est une variable globale qui contient des données de l'appli comme la request par ex #}
    {# app.user renvoie les données de l'utilisateur connecté ou NULL si on est pas connecté sur la plateforme #}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" {#value="{{ email }}"#} name="email" id="inputEmail" class="form-control" autocomplete="email" autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

   

    <button class="btn btn-lg btn-primary" href="{{ path('app_produit') }}" type="submit">
        Connexion
    </button>
    
    {# <button class="btn btn-lg btn-primary" href="{{ path('') }}"type="submit"> #}
    
    <a href="{{ path('app_register') }}" class="btn btn-primary">
			S'inscrire
		</a>
</form>
{% endblock %}
